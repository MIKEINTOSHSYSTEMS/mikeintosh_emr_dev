<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="email_template_birthday_wish" model="mail.template">
            <field name="name">Birthday Wish</field>
            <field name="model_id" ref="model_hms_patient"/>
            <field name="email_from">{{ user.email }}</field>
            <field name="email_to">{{ object.email }}</field>
            <field name="subject">Birthday Wishes!!!</field>
                <field name="body_html" type="html">
<p>Dear <t t-out="object.name"/>,</p>
<img src="/yan_hims_start/static/scr/img/birthday1.gif"/>
<p> Wishing you the very best as you celebrate your big day. Happy Birthday to you from all of us!</p>
            </field>
        </record>

        <record forcecreate="True" id="ir_cron_birth" model="ir.cron">
            <field name="name">Birthday scheduler</field>
            <field eval="True" name="active"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="state">code</field>
            <field eval="False" name="doall"/>
            <field ref="model_hms_patient" name="model_id"/>
            <field eval="'model.send_birthday_email()'" name="code"/>
        </record>

    </data>
</odoo>
