<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="sequence_view" model="ir.ui.view">
        <field name="name">ir.sequence.filter</field>
        <field name="model">ir.sequence</field>
        <field name="inherit_id" ref="base.sequence_view"/>
        <field name="arch" type="xml">
            <field name="implementation" position="after">
                <field name="yan_auto_create"/>
            </field>
        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <filter name="type_person" position="before">
                <filter string="Today's Birthday" name="today_birthday" domain="[('birthday','like',(context_today()).strftime('%%m-%%d'))]"/>
            </filter>
        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="arch" type="xml">
            <filter name="customer" position="before">
                <filter string="Is Patient" name="is_patient" domain="[('is_patient','=',True)]"/>
            </filter>
        </field>
    </record>

    <!-- <Patient Tag> -->
    <record id="view_patient_tag_tree" model="ir.ui.view">
        <field name="name">hms.patient.tag.tree</field>
        <field name="model">hms.patient.tag</field>
        <field name="arch" type="xml">
            <tree string="Patient Tag" editable="bottom" sample="1">
                <field name="name"/>
                <field name="color" widget="color_picker" />
            </tree>
        </field>
    </record>

    <record id="view_patient_tag_form" model="ir.ui.view">
        <field name="name">hms.patient.tag.form</field>
        <field name="model">hms.patient.tag</field>
        <field name="arch" type="xml">
            <form string="Patient Tag">
                <sheet>
                    <div class="oe_title">
                        <label for="name"/>
                        <h1>
                            <field name="name" placeholder="Patient Tag"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="color" required="True" widget="color_picker"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_patient_tag_search" model="ir.ui.view">
        <field name="name">hms.patient.tag.search</field>
        <field name="model">hms.patient.tag</field>
        <field name="arch" type="xml">
            <search string="Patient Tag">
                <field name="name"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_patient_tag">
        <field name="name">Patient Tag</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hms.patient.tag</field>
        <field name="view_id" ref="view_patient_tag_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Patient Tag.
            </p>
        </field>
    </record>

    <!-- Therapeutic Effect -->
    <record id="view_therapeutic_effect_tree" model="ir.ui.view">
        <field name="name">hms.therapeutic.effect.tree</field>
        <field name="model">hms.therapeutic.effect</field>
        <field name="arch" type="xml">
            <tree string="Therapeutic Effect">
                <field name="name"/>
                <field name="code"/>
            </tree>
        </field>
    </record>

    <record id="view_therapeutic_effect_form" model="ir.ui.view">
        <field name="name">hms.therapeutic.effect.form</field>
        <field name="model">hms.therapeutic.effect</field>
        <field name="arch" type="xml">
            <form string="Therapeutic Effect">
                <sheet>
                     <group>
                        <group>
                            <field name="name"/>
                        </group>
                        <group>
                            <field name="code"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_therapeutic_effect_search" model="ir.ui.view">
        <field name="name">hms.therapeutic.effect.search</field>
        <field name="model">hms.therapeutic.effect</field>
        <field name="arch" type="xml">
            <search string="Therapeutic Effect">
                <field name="name"/>
                <field name="code"/>
            </search>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_therapeutic_effect">
        <field name="name">Therapeutic Effect</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hms.therapeutic.effect</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Therapeutic Effect.
            </p>
        </field>
    </record>

    <!-- Consumable Lines -->
    <record id="view_hms_consumable_line_form" model="ir.ui.view">
        <field name="name">hhms.consumable.line.form</field>
        <field name="model">hms.consumable.line</field>
        <field name="arch" type="xml">
            <form string="consumable Lines">
                <sheet>
                     <group>
                        <group>
                            <field name="name"/>
                            <field name="product_id"/>
                            <field name="product_uom_id"/>
                            <field name="qty"/>
                            <field name="price_unit"/>
                            <field name="subtotal"/>
                            <field name="product_uom_category_id" invisible="1"/>
                            <field name="tracking" invisible="1"/>
                        </group>
                        <group>
                            <field name="lot_id"/>
                            <field name="move_id"/>
                            <field name="physician_id"/>
                            <field name="department_id"/>
                            <field name="patient_id"/>
                            <field name="invoice_id"/>
                        </group>
                    </group>
                    <field name="note"/>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
