<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- Patient View -->
    <record id="view_patient_form" model="ir.ui.view">
        <field name="name">hms.patient.form</field>
        <field name="model">hms.patient</field>
        <field name="inherit_id" ref="yan_hims_tasks.view_patient_form"/>
        <field name="arch" type="xml">
            <div name="button_box" position="inside">
                <button name="view_yan_ambulance_service" type="object" class="oe_stat_button" groups="yan_hims_ambulance.group_ambulance_service_user" icon="fa-ambulance">
                    <field string="Ambulance Services" name="yan_ambulance_service_count" widget="statinfo"/>
                </button>
            </div>
        </field>
    </record>

    <!-- Fleet View -->
    <record id="fleet_vehicle_view_form" model="ir.ui.view">
        <field name="name">fleet.vehicle.form</field>
        <field name="model">fleet.vehicle</field>
        <field name="inherit_id" ref="fleet.fleet_vehicle_view_form"/>
        <field name="arch" type="xml">
            <group position="inside">
                <group string="Hospital">
                    <field name="service_product_id"/>
                    <field name="user_id"/>
                </group>
            </group>
        </field>
    </record>

    <!-- Partner View -->
    <record id="view_hms_partner_form" model="ir.ui.view">
        <field name="name">res.partner</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="yan_hims_tasks.view_hms_partner_form"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='hms_info']" position="inside">
                <separator string="Ambulance Services"/>
                <group>
                    <group>
                        <field name="is_driver"/>
                    </group>
                    <group>
                    </group>
                </group>
            </xpath>

            <div name="button_box" position="inside">
                <button name="view_yan_ambulance_drive" type="object" class="oe_stat_button" groups="yan_hims_ambulance.group_ambulance_service_user" icon="fa-ambulance">
                    <field string="Ambulance Drives" name="yan_ambulance_drive_count" widget="statinfo"/>
                </button>
            </div>

        </field>
    </record>

    <record id="view_res_partner_filter" model="ir.ui.view">
        <field name="name">res.partner.filter</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter"/>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <filter name="customer" position="before">
                <filter string="Is Driver" name="is_driver" domain="[('is_driver','=',True)]"/>
            </filter>
        </field>
    </record>

    <record id="action_partner_driver" model="ir.actions.act_window">
        <field name="name">Ambulance Driver</field>
        <field name="res_model">res.partner</field>
        <field name="context">{'search_default_is_driver': 1, 'default_is_driver': 1}</field>
        <field name="view_mode">kanban,tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No Record Found
            </p>
            <p>
                Click to add a Driver.
            </p>
        </field>
    </record>

</odoo>